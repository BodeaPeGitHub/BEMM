
WindowManager:
    SleepingWindow:

<SleepingWindow>:
    name: "sleeping"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "SLEEPING"
            #size_hint: (1, .5)
            font_size: 22

        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "When do you want to wake up?"
                #size_hint: (1, .2)
                font_size : 15
            TextInput:
                id: "hourToWakeUp"
                #size_hint: (1, .2)
                font_size: 15

        BoxLayout:
            orientation: "horizontal"
            Button:
                id: "whenToGoToSleep"
                text: "Find out when to go to sleep: "
            Label:
                text: "TO DO"
                #size_hint: (1, .2)
                font_size : 15

        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "When do you want to go to sleep?"
                #size_hint: (1, .2)
                font_size : 15
            TextInput:
                id: "hourToGoToSleep"
                #size_hint: (1, .2)
                font_size: 15

        BoxLayout:
            orientation: "horizontal"
            Button:
                id: "whenToWakeUp"
                text: "Find out when to go to sleep: "
            Label:
                text: "TO DO"
                #size_hint: (1, .2)
                font_size : 15

        BoxLayout:
            orientation: "horizontal"
            Button:
                id: "goodSleep"
                text: "I slept enough! :)"
            Button:
                id: "badSleep"
                text: "I didn't succeed this time.. :()"

        Button:
                id: "buttonBackLogin"
                text: "Back"

