
WindowManager:
    SleepingWindow:

<SleepingWindow>:
    name: "sleeping"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        BoxLayout:
            orientation: "horizontal"

            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "SLEEPING"
                    #size_hint: (1, .5)
                    font_size: 20
                Label:
                    text: "Wake up hour:"
                    #size_hint: (1, .2)
                    font_size : 12
                BoxLayout:
                    orientation: "horizontal"
                    TextInput:
                        id: "hourToWakeUp"
                        #size_hint: (1, .2)
                        font_size: 12
                    TextInput:
                        id: "minuteToWakeUp"
                        #size_hint: (1, .2)
                        font_size: 12
                Button:
                    id: "whenToGoToSleep"
                    text: "When to go to sleep:"
                Label:
                    text: "TO DO"
                    #size_hint: (1, .2)
                    font_size : 10
                Button:
                    id: "goodSleep"
                    text: "I slept enough! :)"

            BoxLayout:
                orientation: "vertical"
                Button:
                    id: "buttonBackMain"
                    text: "Back"
                    on_release:
                         app.root.current = "?"
                         root.manager.transition.direction = "left"
                Label:
                    text: "Hour to go to sleep:"
                    #size_hint: (1, .2)
                    font_size : 15
                BoxLayout:
                    orientation: "horizontal"
                    TextInput:
                        id: "hourToGoToSleep"
                        #size_hint: (1, .2)
                        font_size: 12
                    TextInput:
                        id: "minuteToGoToSleep"
                        #size_hint: (1, .2)
                        font_size: 12
                Button:
                    id: "whenToWakeUp"
                    text: "When to wake up: "
                Label:
                    text: "TO DO"
                    #size_hint: (1, .2)
                    font_size : 12
                Button:
                    id: "badSleep"
                    text: "I didn't succeed this time.. :()"
