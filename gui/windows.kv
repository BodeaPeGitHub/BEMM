
WindowManager:
    FirstWindow:
    LoginWindow:
    RegisterWindow:
    MainWindow:
    SportWindow:
    SleepingWindow:
    ProfileWindow

<Button>:
    #size: 100, 100
    size_hint: 1, .7
    background_color: 0,0,0,0
    canvas.before:
        Color:
            rgba: (0,.7,.7,1) if self.state=='normal' else (20/255,1,1,0.5)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15,]

<TextInput>:
    background_color: '#B5FDFF'
    height: 10
    size_hint: 1, .5
    font_size: 20
    multiline: False

<Screen>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size

<FirstWindow>:
    name: "first"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Image: 
            source: "gui/static/logoBEMM.png"
            font_size: 32
            size_hint: (1,1)
        

        GridLayout:
            spacing: '20dp'
            cols: 1
            rows: 2

            Button:
                id: buttonLoginScreen
                text: "Log In"
                font_size: 20
                on_release: 
                    app.root.current = "loginScreen" # change window to second
                    root.manager.transition.direction = "left"

    
            Button:
                id: buttonRegisterScreen
                text: "Sign Up"
                font_size: 20
                on_release: 
                    app.root.current = "registerScreen" # change window to second
                    root.manager.transition.direction = "left"


<RegisterWindow>:
    name: "registerScreen"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            color: 0,1,1,1
            text: "Sign Up"
            font_size: 25
            height : 20

        Label:
            color: 0,1,1,1
            text: "Username: "
            font_size: 15

        TextInput:
            id: username
        
        Label:
            color: 0,1,1,1
            text: "First Name: "
            font_size: 15

        TextInput:
            id: firstname
        
        Label:
            color: 0,1,1,1
            text: "Last Name"
            font_size: 15

        TextInput:
            id: lastname

        BoxLayout:
            orientation: "horizontal"
            Button:
                id: buttonRegister
                text: "Register"
                on_release:
                    app.root.current = "mainScreen"
                    root.manager.transition.direction = "up"
                    root.register()
            Button:
                id: buttonBackRegister
                text: "Back"
                on_release:      
                    app.root.current = "first"
                    root.manager.transition.direction = "right"
        
<LoginWindow>:
    name: "loginScreen"
    BoxLayout:
        orientation: "vertical"
        Label:
            color: 0,1,1,1
            text: "Enter your username: "
            font_size: 25

        TextInput:
            id: LoginUsername
            height: 35
            size_hint: 1, 0.2


        BoxLayout:
            orientation: "horizontal"
            Button:
                id: buttonLogin
                text: "Log In"
                size_hint: 1, .3
                on_release:
                    app.root.current = "mainScreen"
                    root.manager.transition.direction = "up"
                    root.logIn()
            Button:
                id: buttonBackLogin
                text: "Back"
                size_hint: 1, .3
                on_release:      
                    app.root.current = "first" 
                    root.manager.transition.direction = "right"

<MainWindow>:
    name: "mainScreen"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "horizontal"
            
            Image:
                id: statusId
                source: "gui/static/status1.png"
            
            Image:
                id: emojiId
                source: "gui/static/emoji1.png"

        Button:
            text: "Profile"
            on_release:
                app.root.current = "profileScreen"
                root.manager.transition.direction = "right"

        Label:
            size_hint: 0.001, .1
            font_size: 1
        
        BoxLayout: #layout water
            orientation: "horizontal"

            Image: 
                source: "gui/static/glass.png"

            Label:
                color: 0,1,1,1
                id: mainLabelNr
                text: "0"
                font_size: 20

            Label:
                color: 0,1,1,1
                text: "/"
                font_size: 20

            Label:
                color: 0,1,1,1
                id: mainLabelTotal
                text: "Nr"
                font_size: 20


            Button:
                text: "+"
                on_release:
                    root.addWater()

        Label:
            size_hint: 0.001, 0.1
            font_size: 1

        Button:
            text: "Run"

        Label:
            size_hint: 0.001, 0.1
            font_size: 1
        
        Button:
            text: "Sport"
            on_release:
                app.root.current = "sportScreen" 
                root.manager.transition.direction = "right"

        Label:
            size_hint: 0.001, 0.1
            font_size: 1
        
        Button:
            text: "Sleep"
            on_release:
                app.root.current = "sleepingScreen" 
                root.manager.transition.direction = "right"

        Label:
            size_hint: 0.01, 0.1
            font_size: 1

        Button:
            text: "Log out"
            on_release:
                app.root.current = "first"
                root.manager.transition.direction = "down"


<SleepingWindow>:
    name: "sleepingScreen"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        BoxLayout:
            orientation: "horizontal"

            BoxLayout:
                orientation: "vertical"
                Label:
                    color: 0,1,1,1
                    text: "SLEEPING"
                    size_hint: 1, 0.5
                    font_size : 20
                Label:
                    color: 0,1,1,1
                    size_hint: 1, 0.5
                    text: "Wake up hour:"
                    font_size : 15
                BoxLayout:
                    size_hint: (1, .2)
                    orientation: "horizontal"
                    TextInput:
                        size_hint: (.2, None)
                        height: 35
                        multiline: False
                        id: "hourToWakeUp"
                        font_size: 12
                    TextInput:
                        size_hint: (.2, None)
                        height: 35
                        multiline: False
                        id: "minuteToWakeUp"
                        font_size: 12
                Button:
                    font_size: 15
                    size_hint: 1, 0.5
                    id: whenToGoToSleep
                    text: "When to go to sleep:"
                Label:
                    color: 0,1,1,1
                    size_hint: 1, 0.4
                    text: "TO DO"
                    font_size : 12
                Button:
                    font_size: 15
                    size_hint: 1, 0.5
                    id: goodSleep
                    text: "I slept enough! :)"

            Label:
                size_hint: 0.01, 1
                font_size: 1

            BoxLayout:
                orientation: "vertical"
                Button:
                    font_size: 15
                    size_hint: 1, 0.5
                    id: buttonBackMain
                    text: "Back"
                    on_release:
                        app.root.current = "mainScreen"
                        root.manager.transition.direction = "left"
                Label:
                    color: 0,1,1,1
                    size_hint: 1, 0.5
                    text: "Hour to go to sleep:"
                    font_size : 15
                BoxLayout:
                    size_hint: (1, .2)
                    orientation: "horizontal"
                    TextInput:
                        size_hint: (.2, None)
                        height: 35
                        multiline: False
                        id: "hourToGoToSleep"
                        font_size: 12
                    TextInput:
                        size_hint: (.2, None)
                        height: 35
                        multiline: False
                        id: minuteToGoToSleep
                        font_size: 12
                Button:
                    font_size: 15
                    size_hint: 1, 0.5
                    id: whenToWakeUp
                    text: "When to wake up: "
                Label:
                    color: 0,1,1,1
                    size_hint: 1, 0.4
                    text: "TO DO"
                    font_size : 12
                Button:
                    font_size: 15
                    size_hint: 1, 0.5
                    id: badSleep
                    text: "I didn't succeed\n this time.. :("

