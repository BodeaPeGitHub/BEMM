
WindowManager:
    FirstWindow:
    LoginWindow:
    RegisterWindow:
    MainWindow:
    SportWindow:
    SleepingWindow:

<FirstWindow>:
    name: "first"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Image: 
            source: "static/logoBEMM.png"
            font_size: 32
            size_hint: (1,.5)
        

        GridLayout:
            spacing: '20dp'
            cols: 1
            rows: 2

            Button:
                id: "buttonLoginScreen"
                text: "login"
                font_size: 32
                on_release: 
                    app.root.current = "loginScreen" # change window to second
                    root.manager.transition.direction = "left"
                    root.afis()
    
            Button:
                id: "buttonRegisterScreen"
                text: "register"
                font_size: 32
                on_release: 
                    app.root.current = "registerScreen" # change window to second
                    root.manager.transition.direction = "left"
                    root.afis()

<LoginWindow>:
    name: "registerScreen"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "register page"
            #size_hint: (1,.5)
            font_size: 20

        Label:
            text: "username"
            #size_hint: (1,.2)

        TextInput:
            id: "username"
            font_size: 10
            #size_hint: (1,.2)
        
        Label:
            text: "firstname"
            #size_hint: (1,.2)

        TextInput:
            id: "firstname"
            font_size: 10
            #size_hint: (1,.2)
        
        Label:
            text: "lastname"
            #size_hint: (1,.2)

        TextInput:
            id: "lastname"
            font_size: 10
            #size_hint: (1,.2)

        BoxLayout:
            orientation: "horizontal"
            Button:
                id: "buttonRegister"
                text: "Register"
                on_release:
                    app.root.current = "mainScreen"
                    root.manager.transition.direction = "up"
            Button:
                id: "buttonBackRegister"
                text: "Back"
                on_release:      
                    app.root.current = "first"
                    root.manager.transition.direction = "right"
        
<RegisterWindow>:
    name: "loginScreen"
    BoxLayout:
        orientation: "vertical"
        
        Label:
            text: "login screen"
        
        Label:
            text: "username"

        TextInput:
            font_size: 10

        BoxLayout:
            orientation: "horizontal"
            Button:
                id: "buttonLogin"
                text: "Login"
                on_release:
                    app.root.current = "mainScreen"
                    root.manager.transition.direction = "up"
            Button:
                id: "buttonBackLogin"
                text: "Back"
                on_release:      
                    app.root.current = "first" 
                    root.manager.transition.direction = "right"

<MainWindow>:
    name: "mainScreen"
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"
            
            Image:
                source: "static/status1.png"
            
            Image:
                source: "static/emoji1.png"

        Button:
            text: "Profile"
        
        BoxLayout: #layout water
            orientation: "horizontal"

            Image: 
                source: "static/glass.png"

            Label:
                id: "mainLabelNr"
                text: "NR"

            Label:
                text: "/"

            Label:
                id: "mainLabelTotal"
                text: "NR"      

            Button:
                text: "+"

        Button:
            text: "Run"
        
        Button:
            text: "Sport"
            on_release:
                app.root.current = "sportScreen" 
                root.manager.transition.direction = "right"
        
        Button:
            text: "Sleep"
            on_release:
                app.root.current = "sleepingScreen" 
                root.manager.transition.direction = "right"


<SleepingWindow>:
    name: "sleepingScreen"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "SLEEPING"
                #size_hint: (1, .5)
                font_size: 20
            Button:
                id: "buttonBackMain"
                text: "Back"
                on_release:
                    app.root.current = "mainScreen"
                    root.manager.transition.direction = "left"

        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "Wake up hour:"
                #size_hint: (1, .2)
                font_size : 15
            TextInput:
                id: "hourToWakeUp"
                #size_hint: (1, .2)
                font_size: 15

        BoxLayout:
            orientation: "horizontal"
            Button:
                id: "whenToGoToSleep"
                text: "When to go to sleep:"
            Label:
                text: "TO DO"
                #size_hint: (1, .2)
                font_size : 15

        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "Hour to go to sleep:"
                #size_hint: (1, .2)
                font_size : 15
            TextInput:
                id: "hourToGoToSleep"
                #size_hint: (1, .2)
                font_size: 15

        BoxLayout:
            orientation: "horizontal"
            Button:
                id: "whenToWakeUp"
                text: "When to wake up: "
            Label:
                text: "TO DO"
                #size_hint: (1, .2)
                font_size : 15

        BoxLayout:
            orientation: "horizontal"
            Button:
                id: "goodSleep"
                text: "I slept enough! :)"
            Button:
                id: "badSleep"
                text: "I didn't succeed this time.. :()"

